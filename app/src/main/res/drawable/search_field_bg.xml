<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_5sdp" />
            <solid android:color="#131416" />
        </shape>
    </item>

    <!--your color-->
    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_1sdp"
        android:right="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_5sdp" />
            <gradient
                android:angle="-45"
                android:endColor="@color/black_gradient_end"
                android:startColor="@color/black_gradient_start"
                android:type="linear" />
        </shape>

    </item>

</layer-list>